# ============================================
# FolioTech Institute - Environment Variables
# Copy this file to .env and fill in your actual values
# ============================================

# ============================================
# SUPABASE CONFIGURATION
# ============================================

# Development Environment (Local Supabase)
VITE_SUPABASE_URL=http://localhost:54321
VITE_SUPABASE_ANON_KEY=your-local-anon-key

# Production Environment (Override these in production)
# VITE_SUPABASE_URL=https://your-project-ref.supabase.co
# VITE_SUPABASE_ANON_KEY=your-production-anon-key

# ============================================
# EMAIL CONFIGURATION
# ============================================

# SMTP Settings for Application Emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@foliotechinstitute.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@foliotechinstitute.com
SMTP_SECURE=false

# Admin Email for Notifications
ADMIN_EMAIL=admin@foliotechinstitute.com

# ============================================
# PAYMENT PROVIDERS
# ============================================

# Paystack Configuration (Primary Payment Provider)
VITE_PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key

# Flutterwave Configuration (Secondary Payment Provider)
VITE_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your-flutterwave-public-key
VITE_FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your-flutterwave-secret-key
VITE_FLUTTERWAVE_ENCRYPTION_KEY=your-flutterwave-encryption-key

# ============================================
# API CONFIGURATION
# ============================================

# Backend API URL
VITE_API_URL=http://localhost:3001

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Node Environment
NODE_ENV=development

# API Port (for backend server)
API_PORT=3001
